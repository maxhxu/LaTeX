% Core packages
\usepackage{amsmath, amsthm, amssymb}
\usepackage[most]{tcolorbox}
\usepackage{graphicx}
\usepackage{enumitem}
\usepackage{fancyhdr}
\usepackage{geometry}
\usepackage{hyperref}
\usepackage{titlesec}
